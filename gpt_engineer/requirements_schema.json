{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "requirementText": {
            "type": "string",
            "description": "The text of the requirement."
        },
        "aggregateRoot": {
            "type": "string",
            "description": "The aggregate root the requirement relates to."
